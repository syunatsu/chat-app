<div class="chat-header">
  <div class="left-header">
    <div class="header-name">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="terminate-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-space">
  <div class="chats">
    <div class="chat-detail">
      <div class="chat-name">
        Tom
      </div>
      <div class="chat-date">
        2022/4/4(Mon) 16:00:00
      </div>
    </div>
    <div class="chat-sentence">
      おはよう
    </div>
  </div>
  <div class="chats">
    <div class="chat-detail">
      <div class="chat-name">
        Jimmy
      </div>
      <div class="chat-date">
        2022/4/4(Mon) 16:00:00
      </div>
    </div>
    <div class="chat-sentence">
      おはようございます
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="chat-form">
    <%= f.text_field :content, class: 'form-input', placeholder: 'type a message' %>
    <label class="form-image">
      <span>画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit-button' %>
<% end %>